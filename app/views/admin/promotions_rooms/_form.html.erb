<%= form_for [:admin, @room, @promotion] do |f| %>

  <% if @promotion.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% @promotion.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :start_date %>
    <%= f.date_field :start_date %>
  </div>

  <div class="field">
    <%= f.label :end_date %>
    <%= f.date_field :end_date %>
  </div>

  <div class="field">
    <%= f.label :discount_type %>
    <%= f.select(:discount_type, [['Fixed', 'fixed'], ['Discount', 'discount']]) %>
  </div>

  <div class="field">
    <%= f.label :discount_amount %>
    <%= f.number_field :discount_amount %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>